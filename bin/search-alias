#!/bin/sh
search_alias() {
    if [ -z "$1" ]; then
        echo "Usage: alias_search <search-term>"
        return 1
    fi
    
    # search alias with simple grep then pipe to fzf
    # fix 0.1: include `-i` to improve search.
    alias | grep -i "$1" | fzf
}


# Call the function
search_alias "$@"
