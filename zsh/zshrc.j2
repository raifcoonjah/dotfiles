# --------------------------------------------------------
# zsh configuration
# --------------------------------------------------------

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"
# Disable themes from loading since we handle them with starship instead.
# ZSH_THEME="darkblood"

# updates
zstyle ':omz:update' mode auto      # update automatically without asking
zstyle ':omz:update' frequency 13

# Plugins
plugins=(git history zsh-syntax-highlighting zsh-autosuggestions)
source $ZSH/oh-my-zsh.sh

# -------- [ Custom Configurations ] --------
# Export parameters
export MANPATH="/usr/local/man:$MANPATH"
export PATH=$HOME/.local/bin:$PATH
# F*cking ensure that VIM is always the editor
export EDITOR=vim
# Compilation flags
export ARCHFLAGS="-arch x86_64"
export PROJECTS="~/Documents/projects"

# -------- [ Alias & others ... ] --------

# Moved from .zsh_alias to make it easier to manage >_>
alias ddebian="docker pull debian:bookworm && docker run -it debian:bookworm /bin/bash"
alias projects="cd ~/Documents/projects"
alias notes="cd ~/Documnents/notes"
alias weather="curl -i https://wttr.in | head -n12"
# --------------------------------------------------------
# Starship.rs
# https://starship.rs
# --------------------------------------------------------
eval "$(starship init zsh)"

