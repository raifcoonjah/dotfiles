# --------------------------------------------------------
# zsh configuration
# --------------------------------------------------------

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"
# Disable themes from loading since we handle them with starship instead.
# ZSH_THEME="darkblood"

# updates
zstyle ':omz:update' mode auto      # update automatically without asking
zstyle ':omz:update' frequency 13

# Fast directory navigation
autoload -U z
zstyle ':completion:*' list-colors ${(s.:.)LS_COLORS}

# Plugins
plugins=(git history zsh-syntax-highlighting zsh-autosuggestions)
source $ZSH/oh-my-zsh.sh


# -------- [ Custom Configurations ] --------
# Export parameters
export MANPATH="/usr/local/man:$MANPATH"
export PATH=$HOME/.local/bin:$PATH
# F*cking ensure that VIM is always the editor
export EDITOR=vim
# Compilation flags
export ARCHFLAGS="-arch x86_64"
export PROJECTS="~/Documents/projects"

# -------- [ Alias & others ... ] --------

# Moved from .zsh_alias to make it easier to manage >_>
alias ddebian="docker pull debian:bookworm && sleep 1 && docker run -it debian:bookworm /bin/bash"
alias pa="ping ping.archlinux.org"
alias projects="~/Documents/projects"
alias notes="~/Documnents/notes"
alias="search-alias"

# --------------------------------------------------------
# Starship.rs
# https://starship.rs
# --------------------------------------------------------
eval "$(starship init zsh)"