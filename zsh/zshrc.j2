# --------------------------------------------------------
# zsh configuration
# --------------------------------------------------------

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"
# Disabled.  Themes from loading since we handle them with starship instead.
ZSH_THEME="aphrodite/aphrodite" # set by `omz`

# History
# Several fixes, including ignore any duplicate cmds from
# appearing :)
HISTSIZE=7000
HISTFILE=~/.zsh_history
SAVEHIST=$HISTSIZE
HISTDUP=erase
setopt appendhistory
setopt sharehistory
setopt hist_ignore_space
setopt hist_ignore_all_dups
setopt hist_save_no_dups
setopt hist_ignore_dups
setopt hist_find_no_dups

# updates
zstyle ':omz:update' mode auto      # update automatically without asking
zstyle ':omz:update' frequency 13

# Plugins
plugins=(git history zsh-syntax-highlighting zsh-autosuggestions)
source $ZSH/oh-my-zsh.sh

# -------- [ Custom Configurations ] --------
# Export parameters
export MANPATH="/usr/local/man:$MANPATH"
export PATH=$HOME/.local/bin:$PATH
# F*cking ensure that VIM is always the editor
export EDITOR=vim
# Compilation flags
export ARCHFLAGS="-arch x86_64"
export PROJECTS="~/Documents/projects"

# ------ [ MacOS stuff ] ----------
# Fix brew path
export PATH=/opt/homebrew/bin:$PATH
export PATH="$HOME/Library/Python/3.9/bin:/opt/homebrew/bin:$PATH"

# -------- [ Alias & others ... ] --------

# Moved from .zsh_alias to make it easier to manage >_>
alias ddebian="docker pull debian:bookworm && docker run -it debian:bookworm /bin/bash"
alias p="cd ~/Developer"
alias n="cd ~/Documnents/notes"
alias python="python3"
alias rsyncmulti="python3 ~/.dotfiles/bin/rsyncmulti.py"
alias rsync="rsync" # hack to use brew version of rsync instead of built-in outdated version. thanks apple.
alias macupdate="brew update; brew upgrade; brew cleanup"
